rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    // FAVORITOS - Permisos mejorados
   match /favoritos/{docId} {
      allow read: if request.auth != null && 
                 (request.auth.uid == resource.data.userId || 
                  request.query.limit <= 10);
      
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
      
      allow update, delete: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
    }
    
     match /lugares/{docId} {
      allow read: if request.auth != null && 
                 (request.auth.uid == resource.data.userId || 
                  request.query.limit <= 10);
      
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
      
      allow update, delete: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
    }
    
    
    match /tokens/{docId}{
    allow read: if request.auth != null && 
                 (request.auth.uid == resource.data.userId || 
                  request.query.limit <= 10);
      
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
      
      allow update, delete: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
    }
    
    match /creados/{docId} {
    allow read: if request.auth != null && 
                 (request.auth.uid == resource.data.userId || 
                  request.query.limit <= 10);
      
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
      
      allow update, delete: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
    }
    
     match /user/{docId} {
      allow read: if request.auth != null && 
                 (request.auth.uid == resource.data.userId || 
                  request.query.limit <= 10);
      
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
      
      allow update, delete: if request.auth != null && 
                           request.auth.uid == resource.data.userId;
    }

    // RUTAS - Permisos mejorados

   
    // PLACES - Permisos mejorados
    match /places/{docId} {
      allow read, update, delete: if request.auth != null && 
                                request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
                   request.auth.uid == request.resource.data.userId;
    }

    // USUARIOS - Permisos mejorados
    match /users/{userId} {
      allow read, write: if request.auth != null && 
                         request.auth.uid == userId;
    }

    // Permisos para consultas compuestas
    match /{collection}/{document} {
      allow list: if request.auth != null && 
                 request.query.limit <= 10; // Limita consultas grandes
    }
  }
  }